{
  "version": "0.1.0",
  "name": "openweathermap-onecall",
  "author": "Jordon de Hoog",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/openweathermap-onecall.esm.js",
  "browser": "dist/openweathermap-onecall.umd.production.min.js",
  "typings": "dist/types/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "predocs": "rimraf docs",
    "docs": "typedoc --out docs --exclude '**/__mocks__/**' --excludePrivate --excludeInternal src/index.ts",
    "build": "tsdx build --format umd,esm,cjs",
    "test": "tsdx test",
    "test:watch": "tsdx test --watch",
    "test:coverage": "tsdx test --coverage",
    "lint": "tsdx lint src test",
    "lint:fix": "tsdx lint --fix"
  },
  "dependencies": {
    "axios": "^0.21.0",
    "date-fns": "^2.16.0"
  },
  "devDependencies": {
    "commitizen": "4.2.3",
    "cz-conventional-changelog": "3.3.0",
    "husky": "4.3.8",
    "jest-mock-axios": "4.3.0",
    "rimraf": "3.0.2",
    "tsdx": "0.14.1",
    "tslib": "2.1.0",
    "typedoc": "0.20.23",
    "typescript": "4.1.3"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": false,
    "trailingComma": "es5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "release": {
    "branches": [
      "master",
      "next"
    ]
  },
  "jest": {
    "coverageReporters": [
      "lcov",
      "html",
      "text"
    ]
  }
}
